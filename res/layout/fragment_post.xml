<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/page_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/post_inreplyto_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:visibility="gone">

            <TextView
                android:id="@+id/post_reply_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/post_reply_delete"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="?attr/icon_post_delete"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/post_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="text|textMultiLine"
                    android:minHeight="60dp"
                    android:freezesText="true"/>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >

                <ImageButton
                    android:id="@+id/post_delete"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:src="?attr/icon_post_delete"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/post_text_count"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:freezesText="true"/>
            </RelativeLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:columnCount="8"
            android:rowCount="1"
            android:alignmentMode="alignBounds">

            <ImageButton
                android:id="@+id/post_media"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="?attr/icon_post_picture"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:background="@android:color/transparent"
                android:adjustViewBounds="false"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_column="1"/>

            <ImageButton
                android:id="@+id/post_menu"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="?attr/icon_post_row"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_gravity="fill"
                android:background="@android:color/transparent"
                android:adjustViewBounds="false"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_column="3"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_column="4"
                android:layout_columnSpan="4"
                android:layout_row="0"
                android:background="?attr/button_round_blue">

                <Button
                    android:id="@+id/post_tweet_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    style="@style/custom_button_transparent"
                    android:text="@string/post_button_tweet"
                    android:textStyle="bold"
                    android:textColor="?attr/button_blue_foreground"/>
            </FrameLayout>
        </GridLayout>

        <LinearLayout
            android:id="@+id/post_media_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/post_media_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/post_media_delete"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="?attr/icon_post_delete"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>